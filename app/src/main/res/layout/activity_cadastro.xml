<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Cadastro.Cadastro"
    android:background="@drawable/aa">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="demo.ayaz.demo.MainActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/ic_action_cam" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_above="@+id/editText2"
            android:layout_alignBottom="@+id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="260dp"
            android:background="#61F9F9F9"
            android:drawableLeft="@drawable/ic_action_nome"
            android:ems="10"
            android:hint="Nome: "
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            android:textSize="16dp" />

        <EditText android:id="@+id/editText3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#61F9F9F9"
            android:textColorHint="#000000"
            android:drawableLeft="@drawable/ic_action_nome"
            android:ems="10" android:hint="Sobrenome: "
            android:inputType="textPersonName"
            android:textSize="16dp" android:layout_marginBottom="210dp"
            android:layout_above="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/cardView"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"/>
        <EditText android:id="@+id/editText4"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#61F9F9F9"
            android:textColorHint="#000000"
            android:drawableLeft="@drawable/ic_action_email"
            android:ems="10" android:hint="Email: "
            android:inputType="textPersonName"
            android:textSize="16dp" android:layout_marginBottom="160dp"
            android:layout_above="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/cardView"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"/>
        <EditText android:id="@+id/editText5"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#61F9F9F9"
            android:textColorHint="#000000"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10" android:hint="Senha: "
            android:inputType="textPersonName"
            android:textSize="16dp" android:layout_marginBottom="110dp"
            android:layout_above="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/cardView"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"/>

        <EditText android:id="@+id/editText6"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#61F9F9F9"
            android:textColorHint="#000000"
            android:drawableLeft="@drawable/ic_action_desc"
            android:ems="10" android:hint="Descrição: "
            android:inputType="textPersonName"
            android:textSize="16dp" android:layout_marginBottom="60dp"
            android:layout_above="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/cardView"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"/>



        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@android:color/darker_gray"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:id="@+id/cardView"

            android:layout_marginBottom="31dp"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true">
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Finalizar"
                    android:textColor="#fff"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>/>


        <TextView android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:text="Solicitar via Facebook"
            android:textColorHint="#61F9F9F9"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"/>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="-40dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:id="@+id/linearLayout">
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="120dp"
            android:id="@+id/linearLayout2">
            <ImageView android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                app:srcCompat="@drawable/facebook"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>