<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lista.Clientes.FragmentTarde">

    <android.support.v7.widget.CardView
        android:id="@+id/carview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="3"
            android:padding="4dp">


            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:transitionName=""
                app:srcCompat="@android:drawable/ic_menu_camera" />
            <!-- Barra de progresso enquanto carrega a foto -->


            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="132dp"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="7"
                    android:text="Nome: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:text="Data: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tHorario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:text="HorÃ¡rio: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tCorte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:text="Corte:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tBarba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:text="Barba:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tSobrancelha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:text="Sobrancelha:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:text="Valor corte:"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>